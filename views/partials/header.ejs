        <option value="ta">Tamil</option>
    </select> -->
    
    <!-- Navbar -->
   <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark" style="background: rgba(0, 0, 0, 0.7); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/index">
        <img src="/images/logo.jpeg" alt="Logo" class="logo" style="filter: drop-shadow(0 0 5px #00ff88); width: 60px; height: 55px; border-radius: 50%; margin-right: 10px; transition: transform 0.3s ease;">
        <span style="font-size: 1.5rem; font-weight: bold; color: #00ff88;">WasteBuddy</span>
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" style="margin-left: 51px;" id="navbarNav">
        <!-- Left-side Menu Items -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/waste-classification">
              <i class="fas fa-camera me-1"></i> Classify
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chatbot">
              <i class="fas fa-comments me-1"></i> Chatbot
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/carbon">
              <i class="fas fa-star me-1"></i> Carbon Footprint
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/pickup-scheduling">
              <i class="fas fa-truck me-1"></i> Schedule
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/marketplace">
              <i class="fas fa-store me-1"></i> Market
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/waste-data">
              <i class="fas fa-chart-bar me-1"></i> Data
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/flashcard">
              <i class="fas fa-book me-1"></i> Guide
            </a>
          </li>
        </ul>
        
        <!-- Right-side User Info -->
        <% if (user) { %>
          <div class="d-flex align-items-center" >
            <span class="text-light me-3">Hi, <%= user.name %></span>
            <span class="badge bg-success me-3">Points: <%= user.points %></span>
            <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
          </div>
        <% } else { %>
          <div class="d-flex align-items-center">
            <a href="/login" class="btn btn-light">Login</a>
            <a href="/signup" class="btn btn-warning ms-2">Sign Up</a>
          </div>
        <% } %>
      </div>
    </div>
  </nav>
  
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
