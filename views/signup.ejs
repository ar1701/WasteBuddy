<%- include('partials/header') %>
<style>
    .card-body{
        padding-bottom: 800px;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-6 mb-5">
            <div class="card shadow-lg mb-5">
                <div class="card-body p-5 mb-5">
                    <h2 class="text-center mb-4">Sign Up</h2>
                    
                  
                    <form action="/signup" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="number" class="form-control" id="phone" name="phone" required>
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">Sign Up as</label>
                            <select class="form-control" id="role" name="role" required onchange="toggleAdminKey()">
                                <option value="user">User</option>
                                <option value="admin">Admin</option>
                            </select>
                        </div>
                        <div class="mb-3" id="adminKeyDiv" style="display: none;">
                            <label for="adminKey" class="form-label">Enter Your Admin Key</label>
                            <input type="password" class="form-control" id="adminKey" name="adminKey">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Sign Up</button>
                        </div>
                    </form>
                    
                    <div class="text-center mt-4">
                        <p>Already have an account? <a href="/login" class="text-success">Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const form = document.querySelector("form");
        const password = document.getElementById("password");
        const confirmPassword = document.getElementById("confirmPassword");
        const errorDiv = document.createElement("div");
        
        errorDiv.classList.add("text-danger", "mt-2");
        confirmPassword.parentNode.appendChild(errorDiv);
    
        form.addEventListener("submit", function(event) {
            if (password.value !== confirmPassword.value) {
                event.preventDefault();
                errorDiv.textContent = "Passwords do not match!";
            } else {
                errorDiv.textContent = "";
            }
        });
    });


   
    function toggleAdminKey() {
        const role = document.getElementById('role').value;
        const adminKeyDiv = document.getElementById('adminKeyDiv');
        if (role === 'admin') {
            adminKeyDiv.style.display = 'block';
        } else {
            adminKeyDiv.style.display = 'none';
        }
    }

    </script>
    


