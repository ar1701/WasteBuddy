<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Waste Disposal Guide</h2>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="https://placehold.co/400x300" class="card-img-top" alt="Recyclable Waste">
                <div class="card-body">
                    <h5 class="card-title">Recyclable Waste</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Paper and Cardboard</li>
                        <li class="list-group-item">Glass Bottles and Jars</li>
                        <li class="list-group-item">Plastic Containers (1-7)</li>
                        <li class="list-group-item">Metal Cans</li>
                    </ul>
                    <div class="mt-3">
                        <h6>Disposal Method:</h6>
                        <p>Clean and place in blue recycling bin</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="https://placehold.co/400x300" class="card-img-top" alt="Organic Waste">
                <div class="card-body">
                    <h5 class="card-title">Organic Waste</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Food Scraps</li>
                        <li class="list-group-item">Garden Waste</li>
                        <li class="list-group-item">Coffee Grounds</li>
                        <li class="list-group-item">Fruit and Vegetable Peels</li>
                    </ul>
                    <div class="mt-3">
                        <h6>Disposal Method:</h6>
                        <p>Place in green organic waste bin</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="https://placehold.co/400x300" class="card-img-top" alt="Hazardous Waste">
                <div class="card-body">
                    <h5 class="card-title">Hazardous Waste</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Batteries</li>
                        <li class="list-group-item">Electronics</li>
                        <li class="list-group-item">Paint</li>
                        <li class="list-group-item">Chemicals</li>
                    </ul>
                    <div class="mt-3">
                        <h6>Disposal Method:</h6>
                        <p>Take to designated collection centers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>