<%- include('partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Waste Collection Data</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Submit Waste Data</h5>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Waste Type</label>
                            <select class="form-select">
                                <option>Plastic</option>
                                <option>Paper</option>
                                <option>Glass</option>
                                <option>Metal</option>
                                <option>Organic</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Weight (kg)</label>
                            <input type="number" class="form-control" step="0.1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Collection Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Additional Notes</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Submit Data</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Waste Collections</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Weight</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>2024-01-15</td>
                                    <td>Plastic</td>
                                    <td>5.2 kg</td>
                                    <td><span class="badge bg-success">Collected</span></td>
                                </tr>
                                <tr>
                                    <td>2024-01-14</td>
                                    <td>Paper</td>
                                    <td>3.8 kg</td>
                                    <td><span class="badge bg-success">Collected</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>