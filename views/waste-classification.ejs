<%- include('partials/header') %>

<style>
  .message {
    border-radius: 8px;
    margin: 8px 0;
  }

  .message.user {
    margin-left: 20%;
  }

  .message.bot {
    margin-right: 20%;
  }

  .chat-container {
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 15px;
  }

  .upload-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    border: 2px dashed #007bff;
    border-radius: 10px;
    background: #f8f9fa;
  }

  /* ðŸŽ¨ Image Preview Container */
  .image-preview-container {
    display: none; /* Hide initially */
    justify-content: center;
    align-items: center;
    width: 200px;
    height: 200px;
    border: 2px dashed #ccc;
    border-radius: 10px;
    overflow: hidden;
    margin: 10px auto;
    background-color: #f8f9fa; /* Light gray background */
  }

  /* ðŸ“· Image Preview */
  .image-preview {
    width: 100%;  /* Make the image fill the container */
    height: 100%;
    object-fit: cover; /* Ensures the image fills the space while maintaining aspect ratio */
    display: none;
    border-radius: 10px; /* Match the container border-radius */
  }

  .upload-btn {
    display: inline-block;
    margin-top: 10px;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    color: white;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
  }

  .upload-btn:hover {
    background-color: #0056b3;
  }

  .loading {
    display: none;
    margin-top: 20px;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 5px solid #f3f3f3;
    border-top: 5px solid #007bff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .result-section {
    margin-top: 20px;
    padding: 15px;
    border-radius: 10px;
    background: #e9f5e9;
    border: 2px solid #28a745;
    display: none;
    margin-bottom: 100px;
  }

  .result-text {
    font-size: 18px;
    font-weight: bold;
    color: #155724;
  }
</style>

<div class="container mt-5">
  <h2 class="mb-4">AI Waste Classification</h2>
  <div class="upload-container">
    <div class="image-preview-container">
      <img id="imagePreview" class="image-preview" />
    </div>
    <input type="file" id="imageInput" accept="image/*" hidden />
    <label for="imageInput" class="upload-btn">
      <i class="fas fa-upload"></i> Choose Image
    </label>
    <button id="uploadBtn" class="upload-btn">
      <i class="fas fa-check"></i> Upload
    </button>

    <div id="loading" class="loading">
      <div class="spinner"></div>
      <p>Processing...</p>
    </div>
  </div>

  <div class="result-section">
    <div id="result"></div>
  </div>
</div>

<script>
  // Function to format text by replacing **text** with a line break and bold text
  function formatText(text) {
    // Ensure proper bold formatting for **text**
    text = text.replace(/\*\*(.*?)\*+/g, '<br><strong>$1</strong>');

    // Replace "- " with "<br>â€¢ " for better readability (bullet points)
    text = text.replace(/-\s/g, '<br>â€¢ ');

    return text;
}


  document.getElementById("imageInput").addEventListener("change", function (e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      const previewContainer = document.querySelector(".image-preview-container");
      const preview = document.getElementById("imagePreview");

      reader.onload = function (e) {
        preview.src = e.target.result;
        preview.style.display = "block"; // Ensure image is visible
        previewContainer.style.display = "flex";
      };

      reader.readAsDataURL(file);
    }
  });

  document.getElementById("uploadBtn").addEventListener("click", async () => {
    const imageInput = document.getElementById("imageInput");
    const file = imageInput.files[0];

    if (!file) {
      alert("Please select an image file.");
      return;
    }

    const formData = new FormData();
    formData.append("image", file);

    try {
      const loading = document.getElementById("loading");
      const resultDiv = document.getElementById("result");
      const resultSection = document.querySelector(".result-section");

      // Show loading spinner
      loading.style.display = "flex";
      resultDiv.innerHTML = ""; // Clear previous result

      const response = await fetch("/waste-classification", {
        method: "POST",
        body: formData,
      });

      const data = await response.json();

      // Ensure result section is displayed
      resultSection.style.display = "block";

      if (data.result) {
        // Format the result text before displaying it
        const formattedResult = formatText(data.result);
        resultDiv.innerHTML = `<p class="result-text">${formattedResult}</p>`;
      } else {
        resultDiv.innerHTML = `<p class="result-text text-danger">Error: No classification result received</p>`;
      }
    } catch (error) {
      console.error("Error:", error);
      document.getElementById("result").innerHTML = `<p class="result-text text-danger">Error processing image.</p>`;
    } finally {
      document.getElementById("loading").style.display = "none";
    }
  });
</script>

<%- include('partials/footer') %>
